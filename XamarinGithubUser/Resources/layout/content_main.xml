<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">
    <ListView
        android:id="@+id/list_user"
        android:layout_above="@+id/btn_get_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:id="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="60dp"
        android:layout_marginStart="40dp"      
        android:layout_height="wrap_content"
        android:src="@drawable/abc_ab_share_pack_mtrl_alpha"
        />
    <Button      
        android:id="@+id/btn_get_data"
        android:layout_above="@+id/btn_get_repo"
        android:text="GET Github User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_get_repo"
        android:text="GET Github User Repo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>